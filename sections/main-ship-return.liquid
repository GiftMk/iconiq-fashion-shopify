<div class='container wbshiprtn section-{{ section.id }}-padding'>
  <div class='row'>
    <div class='col-sm-6 col-12'>
      <div class='wbshiprtnsub'>
        <h4>{{ section.settings.wbshiphead }}</h4>
        <p class='rte'>{{ section.settings.wbship }}</p>
      </div>
    </div>
    <div class='col-sm-6 col-12'>
      <div class='wbshiprtnsub'>
        <h4>{{ section.settings.wbrtnhead }}</h4>
        <p class='rte'>{{ section.settings.wbrtn }}</p>
      </div>
    </div>
  </div>
</div>
{%- style -%}
  .wbshiprtnsub {
      border: 1px solid rgba(var(--color-foreground),0.08);
      height: 100%;
      padding: 15px;
      margin-top: 15px;
      background: rgba(var(--color-foreground),0.03);
      border-radius: var(--custom-radius);
  }
  .wbshiprtnsub h4 {
      font-size: calc(var(--font-body-scale) * 22px);
  }
  .wbshiprtnsub ul{
      color: rgba(var(--color-foreground),.8);
  }
  .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  @media screen and (max-width: 991px) {
      .section-{{ section.id }}-padding {
          padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
          padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
      }
  }
  @media (max-width: 575px){
      .wbshiprtnsub{
          height: unset;
      }
  }
{%- endstyle -%}
{% schema %}
{
  "name": "Shipping and return",
  "class": "demo",
  "settings": [
    {
      "type": "text",
      "id": "wbshiphead",
      "label": "Heading",
      "default": "Shipping"
    },
    {
      "type": "inline_richtext",
      "id": "wbship",
      "label": "Text",
      "default": "Free shipping on all orders over"
    },
    {
      "type": "text",
      "id": "wbrtnhead",
      "label": "Heading",
      "default": "Return"
    },
    {
      "type": "inline_richtext",
      "id": "wbrtn",
      "label": "Text",
      "default": "To return an item to us, follow the directions listed on the return exchange form included with your order."
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ]
}
{% endschema %}
